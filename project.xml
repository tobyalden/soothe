<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="gb_jam" package="com.example.app" version="1.0.0" company="" />

 	<app file="Main" main="Main" path="bin" />

	<window fps="60" background="0xADD8E6" />
	<!-- <window width="320" height="288" resizable="false" unless="mobile" /> -->
	<!-- <window width="512" height="480" resizable="false" unless="mobile" /> -->
	<window width="1024" height="960" resizable="false" unless="mobile" />
	<window fullscreen="true" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<haxelib name="HaxePunk" />
	<haxelib name="HaxePunkTmx" />

	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="audio" include="*.mp3" if="flash" />
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg" unless="flash" />
	<assets path="assets/font" rename="font" include="*.ttf" />
	<assets path="assets/levels" rename="levels" include="*.tmx" />

	<icon path="assets/HaxePunk.svg" />
</project>
